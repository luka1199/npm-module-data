{
  "name": "postcss-safe-parser",
  "version": "5.0.0",
  "description": "Fault-tolerant CSS parser for PostCSS",
  "keywords": [
    "css",
    "postcss",
    "postcss-syntax",
    "parser",
    "fault tolerant"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "postcss/postcss-safe-parser",
  "scripts": {
    "test": "jest-ci --coverage && eslint-ci . && ./test/integration.js"
  },
  "engines": {
    "node": ">=10.0"
  },
  "main": "lib/safe-parse",
  "dependencies": {
    "postcss": "^8.0.2"
  },
  "devDependencies": {
    "@logux/eslint-config": "^40.0.4",
    "ci-job-number": "^1.2.2",
    "clean-publish": "^1.1.8",
    "eslint": "^7.9.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^21.0.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.3.0",
    "postcss-parser-tests": "^8.3.0",
    "postcss-sharec-config": "^0.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "sharec": {
    "config": "postcss-sharec-config",
    "version": "0.1.6"
  }
}
