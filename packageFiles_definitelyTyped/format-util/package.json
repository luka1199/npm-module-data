{
  "name": "format-util",
  "description": "Lightweight util.format() for the browser.",
  "version": "1.0.1",
  "author": "muji <noop@xpm.io>",
  "license": "MIT",
  "browser": "./format.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/freeformsystems/format-util.git"
  },
  "keywords": [
    "util",
    "format",
    "string"
  ],
  "devDependencies": {
    "browserify": "~11.1.0",
    "chai": "~3.2.0",
    "istanbul": "~0.3.17",
    "mocha": "~2.3.2"
  },
  "scripts": {
    "docs": "npm run readme",
    "readme": "mdp --force -v",
    "browserify": "browserify -o format-util.js -e ./format.js",
    "clean": "rm -rf coverage ./format-util.js",
    "test": "NODE_ENV=test mocha ${SPEC:-test/spec}",
    "cover": "NODE_ENV=test istanbul cover _mocha -- ${SPEC:-test/spec}"
  },
  "mdp": {
    "title": "Format Util",
    "pedantic": true,
    "include": "doc/readme",
    "require": "lib",
    "links": "links.md",
    "toc": "Table of Contents",
    "base": "https://github.com/freeformsystems/format-util",
    "partial": [
      {
        "inc": [
          "introduction.md",
          "install.md",
          "usage.md",
          "developer.md",
          "license.md"
        ]
      }
    ]
  }
}
