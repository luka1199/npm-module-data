{
    "name": "athenajs",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/AthenaJS/athenajs.git"
    },
    "description": "AthenaJS is a framework for building 2D games using HTML5",
    "author": "Nicolas Ramz",
    "license": "MIT",
    "main": "./dist/athena.js",
    "keywords": [
        "html5",
        "canvas",
        "spritesheet",
        "game",
        "map",
        "tile"
    ],
    "files": [
        "dist"
    ],
    "scripts": {
        "test": "jest",
        "start": "webpack --watch",
        "build": "webpack --config webpack.production.config.js",
        "build-docs": "docma -c ./docma.json",
        "check": "tsc --allowJs --checkJs ./js/athena-module.js"
    },
    "devDependencies": {
        "babel-core": "6.24.1",
        "babel-jest": "^21.2.0",
        "babel-loader": "6.4.1",
        "babel-preset-es2015": "6.24.1",
        "circular-dependency-plugin": "2.0.0",
        "exports-loader": "0.6.4",
        "imports-loader": "0.7.1",
        "jest-cli": "^21.2.1",
        "jsdoc": "^3.5.5",
        "typescript": "^2.5.3",
        "uglifyjs-webpack-plugin": "^0.4.6",
        "webpack": "2.3.3",
        "webpack-notifier": "1.5.0",
        "docma": "1.5.2"
    },
    "dependencies": {
        "es6-promise": "4.1.0",
        "web-audio-daw": "2.3.1",
        "whatwg-fetch": "2.0.3"
    },
    "jest": {
        "transform": {
            "^.+\\.js$": "babel-jest"
        }
    }
}
