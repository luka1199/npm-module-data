{
  "name": "wonder.js",
  "version": "1.0.0",
  "authors": "Wonder",
  "description": "3d webgl engine",
  "homepage": "https://github.com/Wonder-Technology/Wonder.js",
  "repository": "git@github.com:Wonder-Technology/Wonder.js.git",
  "license": "MIT",
  "main": "dist/wd.js",
  "scripts": {
    "start": "node ./server/app.js",
    "watch": "bsb -clean-world -make-world -w",
    "build": "bsb -clean-world -make-world",
    "buildAll": "gulp createShaderChunkSystemFile && gulp generateIndex && npm run build && npm run webpack:dev",
    "buildAll:prod": "gulp createShaderChunkSystemFile && gulp generateIndex && npm run build && npm run webpack:prod",
    "buildAll:ci": "npm run build && gulp createShaderChunkSystemFile && gulp generateIndex && npm run build && npm run webpack:dev",
    "webpack:dev": "NODE_ENV=development  webpack --config webpack.config.js",
    "webpack:prod": "NODE_ENV=production  webpack --config webpack.config.js",
    "test": "jest --config jest.json",
    "test:coverage": "npm run build && jest --config jest_coverage.json",
    "test:ci": "npm run buildAll:ci && jest --maxWorkers=4 --config jest_coverage.json",
    "test:fastRender": "gulp testFastRender",
    "test:fastPf": "gulp testFastPerformance",
    "test:fastPfOneCount": "gulp testFastPerformanceOneCount",
    "test:generatePfBenchmark": "gulp generatePerformanceBenchmark",
    "test:render": "npm run build && gulp testRenderInLocal",
    "test:renderCI": "npm run build && gulp testRenderInCI",
    "test:pf": "npm run build && gulp testPerformanceInLocal",
    "test:pfCI": "npm run build && gulp testPerformanceInCI",
    "test:watch": "jest --watch --verbose false --config jest.json",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "keywords": [
    "wonder",
    "webgl",
    "functional-programming",
    "high-performance",
    "3d",
    "engine",
    "reasonml",
    "reason",
    "bucklescript"
  ],
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-jest": "^24.1.0",
    "bs-platform": "4.0.18",
    "cz-customizable": "^5.2.0",
    "express": "^4.16.1",
    "gulp": "^3.9.1",
    "gulp-git": "^2.5.0",
    "http": "^0.0.0",
    "puppeteer": "^1.12.2",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "wonder-benchmark": "^0.2.13",
    "wonder-bs-jest": "0.2.25",
    "wonder-bs-sinon": "latest",
    "wonder-generate-index": "latest",
    "wonder-glsl-compiler": "^0.1.13",
    "wonder-render-test": "^0.1.27"
  },
  "dependencies": {
    "bs-fetch": "^0.3.0",
    "jest": "^24.1.0",
    "wonder-bs-json": "^0.0.1",
    "wonder-bs-most": "^0.0.3",
    "wonder-commonlib": "^0.2.28",
    "wonder-imgui": "^0.0.33",
    "wonder-log": "^0.2.11",
    "wonder-most-animation-frame": "0.0.3",
    "wonder-webgl": "^0.0.7"
  },
  "resolutions": {
    "wonder-log": "^0.2.11",
    "wonder-webgl": "^0.0.7",
    "wonder-commonlib": "0.2.28",
    "wonder-bs-jest": "0.2.25",
    "wonder-bs-puppeteer": "^0.1.6"
  }
}
